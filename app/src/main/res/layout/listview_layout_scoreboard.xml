<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/scoreboard_Player1_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Player1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/scoreboard_player2_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Player2"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/scoreboard_player3_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Player3"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" - "
                android:textSize="24sp" />

            <TextView
                android:id="@+id/scoreboard_player4_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Player4"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/scoreboard_averageP1_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/colorPrimary"
                android:hint="Average 1" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/scoreboard_averageP2_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Average 2" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/scoreboard_averageP3_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Average 3" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/scoreboard_averageP4_txtView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Average 4" />
        </TableRow>

    </TableLayout>

</LinearLayout>